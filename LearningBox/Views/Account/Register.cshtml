@model LearningBox.Models.ViewModels.RegisterViewModel
@{
    Layout = "~/Views/Shared/_AccountManagementLayout.cshtml";
}

@section Title{
    Register
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <label>Username</label>
        <input class="au-input au-input--full" type="text" name="Username" placeholder="Username">
    </div>
    <div class="form-group">
        <label>Email Address</label>
        <input class="au-input au-input--full" type="email" name="email" placeholder="Email">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input class="au-input au-input--full" type="password" name="password" placeholder="Password">
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input class="au-input au-input--full" type="password" name="ConfirmPassword" placeholder="ConfirmPassword">
    </div>
    <div class="login-checkbox">
        <label>
            <input type="checkbox" name="aggree">Agree the terms and policy
        </label>
    </div>
    <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">register</button>
}